<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.rte.ie/player.*international"
plugin="http://www.rte.ie/player/app/.*.swf"
initialState="init"
version="1.0">

<crop x="18" y="97" width="511" height="287" />

<!-- SEEKBAR NEEDS WORK-->
<seekbar type="thumb">
	<start x="56" y="395" />
	<end x="355" y="395" />
	<played>
		<color rgb="FFFFFF" />
	</played>
</seekbar>

<!-- INIT -->
<state name="init">
	<event>
		<condition>
			<color x="33" y="399" rgb="838383"/>
		</condition>
		<action>
			<move x="33" y="399" />
    	    <pause time="1500" />
			<click x="33" y="399" />           
			<goto state="check" />
		</action>
	</event>
</state>

<!-- CHECK -->
<state name="check">
<event>
	<condition>
		<color x="222" y="323" rgb="000000"/>
	</condition>
	<action>
		<move x="222" y="323" />
   	    <pause time="1000" />
		<click x="222" y="323" />
   	    <pause time="100" />        
		<goto state="check" />
	</action>
</event>

<event>
	<condition>
		<color x="37" y="395" rgb="838383"/>
    </condition>
	<action>
		<goto state="playing" />
	</action>

	<condition>
		<color x="33" y="399" rgb="838383"/>
	</condition>
	<action>
		<move x="33" y="399" />
   	    <pause time="1000" />
		<click x="33" y="399" />
		<goto state="check" />
	</action>
</event>
</state>

<!-- PLAYING -->
<state name="playing">
	<event>
		<condition>
			<command name="pause" />
		</condition>
		<action>
			<move x="33" y="399" />
   	     	<pause time="100" />
			<click x="33" y="399" />
			<goto state="paused" />
		</action>
	</event>
</state>

<!-- PAUSED -->
<state name="paused">
	<event>
		<condition>
			<command name="play" />
		</condition>
		<action>
        	<move x="33" y="399" />
	        <pause time="100" />
			<click x="33" y="399" />
			<goto state="playing" />
		</action>
	</event>
</state>

</site>