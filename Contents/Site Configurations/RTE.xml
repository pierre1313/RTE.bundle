<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.rte.ie/player"
plugin="http://www.rte.ie/player/app/RTE_VOD_14.swf"
initialState="init"
version="1.0">

<crop x="18" y="97" width="511" height="286" />

<!-- SEEKBAR NEEDS WORK-->
<seekbar type="simple">
	<start x="53" y="395" />
	<end x="351" y="395" />
	<played>
		<color rgb="AF8C48" />
	</played>
</seekbar>

<!-- INIT -->
<state name="init">
	<event>
		<condition>
			<color x="34" y="395" rgb="838383"/>
		</condition>
		<action>
			<move x="30" y="395" />
    	    <pause time="1000" />
			<click x="30" y="395" />
			<goto state="check" />
		</action>
	</event>
</state>

<!-- CHECK -->
<state name="check">
<event>
	<condition>
		<color x="38" y="393" rgb="838383"/>
	</condition>
	<action>
		<goto state="playing" />
	</action>
</event>

<event>
	<condition>
		<color x="34" y="395" rgb="838383"/>
	</condition>
	<action>
		<move x="30" y="395" />
   	    <pause time="1000" />
		<click x="30" y="395" />
		<goto state="check" />
	</action>
</event>
</state>

<!-- PLAYING -->
<state name="playing">
	<event>
		<condition>
			<command name="pause" />
		</condition>
		<action>
			<move x="30" y="395" />
   	     	<pause time="100" />
			<click x="30" y="395" />
			<goto state="paused" />
		</action>
	</event>
</state>

<!-- PAUSED -->
<state name="paused">
	<event>
		<condition>
			<command name="play" />
		</condition>
		<action>
        	<move x="30" y="395" />
	        <pause time="100" />
			<click x="30" y="395" />
			<goto state="playing" />
		</action>
	</event>
</state>

</site>